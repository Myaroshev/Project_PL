<Window x:Class="NewProject_PL.ReportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Панель библиотекаря"
        Height="126"
        Width="667"
        ResizeMode="CanMinimize"
        WindowStyle="None"
        Background="White"
        MouseDown="Window_MouseDown">

    <!-- рамка -->
    <Border BorderBrush="Gray" BorderThickness="1">
        <Grid Margin="0,0,0,0" Background="#FFFFE0C0">
            <!-- заголовок -->
            <Border Background="#FFFFE0C0" Height="40" HorizontalAlignment="Stretch" VerticalAlignment="Top">
                <Grid>
                    <Label Content="Панель отчётов"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="#FFB85042"
                           Margin="10,0,0,0" FontFamily="Comic Sans MS" Background="#FFFFE0C0"/>

                    <Button Content="X"
                            Width="30"
                            Height="30"
                            Background="Red"
                            Foreground="White"
                            FontWeight="Bold"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Margin="627,0,0,0"
                            Click="CloseButton_Click_Window" />
                </Grid>
            </Border>

            <!-- отчетность -->
            <StackPanel Margin="5,50,5,5" Orientation="Vertical">
                <DataGrid x:Name="ReportDataGrid" Width="600" AutoGenerateColumns="True" SelectionChanged="ReportDataGrid_SelectionChanged" />
            </StackPanel>
        </Grid>
    </Border>
</Window>
