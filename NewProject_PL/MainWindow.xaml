<Window x:Class="NewProject_PL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Авторизация" Height="563" Width="732"
        ResizeMode="CanMinimize">
    <Grid Background="#FFEFC9AF" Margin="0,0,0,-6">
        <Grid.RowDefinitions>
            <RowDefinition Height="131*"/>
            <RowDefinition Height="123*"/>
        </Grid.RowDefinitions>
        <StackPanel HorizontalAlignment="Center" Height="120" VerticalAlignment="Top" Width="800" Background="#FFFFE0C0"/>
        <Label Content="Вход в систему" HorizontalAlignment="Left" Height="137" Margin="89,0,0,0" VerticalAlignment="Top" Width="751" FontFamily="Comic Sans MS" FontSize="70" FontWeight="Bold" Foreground="#FFB85042"/>
        <Image HorizontalAlignment="Left" Height="116" Margin="134,160,0,0" VerticalAlignment="Top" Width="114" Source="/285655_user_icon.png"/>
        <Image HorizontalAlignment="Left" Height="119" Margin="126,10,0,0" VerticalAlignment="Top" Width="130" Source="/Remove-bg.ai_1736179852416.png" Grid.Row="1"/>
        <TextBox x:Name="LoginTextBox" HorizontalAlignment="Left" Margin="274,217,0,0" TextWrapping="Wrap" Text="Введите имя" VerticalAlignment="Top" Width="275" Height="47" FontSize="30" FontFamily="Comic Sans MS" BorderBrush="Black" GotFocus="TextBox_GotFocus_1" LostFocus="TextBox_LostFocus"/>
        <TextBox x:Name="PasswordTextBox" HorizontalAlignment="Left" Margin="274,47,0,0" TextWrapping="Wrap" Text="Введите карту читателя" MaxLength="20" VerticalAlignment="Top" Width="360" Height="47" FontSize="30" FontFamily="Comic Sans MS" BorderBrush="Black" GotFocus="TextBox_GotFocus_1" LostFocus="TextBox_LostFocus" Grid.Row="1" TextChanged="PasswordTextBox_TextChanged"/>
        <Button Content="Войти" HorizontalAlignment="Center" Height="64" Margin="0,150,0,0" Grid.Row="1" VerticalAlignment="Top" Width="184" FontSize="40" FontFamily="Comic Sans MS" FontWeight="Bold" Click="Button_Click"/>
    </Grid>
</Window>
