<Window x:Class="NewProject_PL.AddData"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Панель библиотекаря"
        Height="986"
        Width="800"
        ResizeMode="CanMinimize"
        WindowStyle="None"
        Background="White"
        MouseDown="Window_MouseDown">

    <Border BorderBrush="Gray" BorderThickness="1" Margin="0,0,0,170">
        <Grid Margin="-1,0,0,-174" Background="#FFFFE0C0">
            <!--заголовок -->
            <Border Background="#FFFFE0C0" Height="40" HorizontalAlignment="Stretch" VerticalAlignment="Top">
                <Grid>
                    <Image Source="/exit.png"
                        Width="65"
                        Height="54"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Margin="688,1,0,0"
                        MouseLeftButtonDown="Image_MouseLeftButtonUp"
                        IsHitTestVisible="True"
                        Focusable="True"/>


                    <Label x:Name="LibPanel" Content="Панель библиотекаря"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="#FFB85042"
                       Margin="10,0,0,0" FontFamily="Comic Sans MS" Background="#FFFFE0C0"/>

                    <Button Content="X"
                        Width="30"
                        Height="30"
                        Background="Red"
                        Foreground="White"
                        FontWeight="Bold"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Margin="0,0,10,0"
                        Click="CloseButton_Click" />
                </Grid>
            </Border>


            <StackPanel Margin="10,50,10,10" Orientation="Vertical">

                <!-- добавление книги -->
                <StackPanel Orientation="Vertical" Margin="0,5,0,5">
                    <Label Content="Добавление книги"
                    FontWeight="Bold"
                    FontSize="16"
                    VerticalAlignment="Center"
                    Margin="0,0,0,5"/>
                    
                    <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Padding="5">
                        <StackPanel Orientation="Horizontal">
                            <!-- название книги -->
                            <StackPanel Orientation="Vertical" Margin="3">
                                <Label Content="Название книги" FontSize="12" />
                                <TextBox x:Name="TitleTextBox" Width="130" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus" />
                            </StackPanel>

                            <!-- автор -->
                            <StackPanel Orientation="Vertical" Margin="3">
                                <Label Content="Автор" FontSize="12" />
                                <TextBox x:Name="AuthorTextBox" Width="130" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus"/>
                            </StackPanel>

                            <!-- ISBN -->
                            <StackPanel Orientation="Vertical" Margin="3">
                                <Label Content="ISBN (заполнять не нужно)" FontSize="12" />
                                <TextBox x:Name="ISBNTextBox" Width="130" IsReadOnly="True" MaxLength="20" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus" />
                            </StackPanel>

                            <!-- жанр -->
                            <StackPanel Orientation="Vertical" Margin="3">
                                <Label Content="Жанр" FontSize="12" />
                                <TextBox x:Name="GenreTextBox" Width="130" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus"/>
                            </StackPanel>

                            <!-- кнопка -->
                            <Button Content="Добавить" Width="90" Margin="3" Click="AddBookButton_Click" />
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- выдача книги -->
                <StackPanel Orientation="Vertical" Margin="0,5,0,5">
                    <Label Content="Выдача книги"
                    FontWeight="Bold"
                    FontSize="16"
                    VerticalAlignment="Center"
                    Margin="0,0,0,5"/>
                    <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Padding="5">
                        <StackPanel Orientation="Horizontal">
                            <!-- номер билета -->
                            <StackPanel Orientation="Vertical" Margin="3">
                                <Label Content="Номер билета" FontSize="12" />
                                <TextBox x:Name="CardNumberTextBox" Width="130" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus" />
                            </StackPanel>

                            <!-- ISBN -->
                            <StackPanel Orientation="Vertical" Margin="3">
                                <Label Content="ISBN" FontSize="12" />
                                <TextBox x:Name="BookTitleTextBox" Width="130" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus" MaxLength="20" />
                            </StackPanel>

                            <!-- дата выдачи -->
                            <StackPanel Orientation="Vertical" Margin="3">
                                <Label Content="Дата выдачи" FontSize="12" />
                                <DatePicker x:Name="DatePicker" Width="130" />
                            </StackPanel>

                            <!-- дата возврата -->
                            <StackPanel Orientation="Vertical" Margin="3">
                                <Label Content="Дата возврата" FontSize="12" />
                                <DatePicker x:Name="ReturnDate" Width="130" />
                            </StackPanel>

                            <!-- кнопка -->
                            <Button Content="Выдать книгу" Width="90" Margin="3" Click="IssueBookButton_Click"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- возврат книги -->
                <StackPanel Orientation="Vertical" Margin="0,5,0,5">
                    <Label Content="Возврат книги"
                    FontWeight="Bold"
                    FontSize="16"
                    VerticalAlignment="Center"
                    Margin="0,0,0,5"/>
                    <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Padding="5">
                        <StackPanel Orientation="Horizontal">
                            <!-- номер билета -->
                            <StackPanel Orientation="Vertical" Margin="3">
                                <Label Content="Номер билета" FontSize="12" />
                                <TextBox x:Name="ReturnCardNumberTextBox" Width="130" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus"/>
                            </StackPanel>

                            <!-- ISBN -->
                            <StackPanel Orientation="Vertical" Margin="3">
                                <Label Content="ISBN" FontSize="12" />
                                <TextBox x:Name="ReturnBookTitleTextBox" Width="130" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus"/>
                            </StackPanel>

                            <!-- дата возврата -->
                            <StackPanel Orientation="Vertical" Margin="3">
                                <Label Content="Дата возврата" FontSize="12" />
                                <DatePicker x:Name="ReturnDatePicker" Width="130" />
                            </StackPanel>

                            <!-- состояние книги -->
                            <StackPanel Orientation="Vertical" Margin="3">
                                <Label Content="Состояние книги" FontSize="12" />
                                <ComboBox x:Name="BookConditionComboBox" Width="130">
                                    <ComboBoxItem Content="Хорошее" IsSelected="True" />
                                    <ComboBoxItem Content="Повреждено" />
                                </ComboBox>
                            </StackPanel>

                            <!-- кнопка -->
                            <Button Content="Принять возврат" Width="90" Margin="3" Click="ReturnBookButton_Click" />
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- отчёт -->
                <StackPanel Orientation="Vertical" Margin="0,5,0,5">
                    <Label Content="Формирование отчета"
                    FontWeight="Bold"
                    FontSize="16"
                    VerticalAlignment="Center"
                    Margin="0,0,0,5"/>
                    <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Padding="5">
                        <StackPanel Orientation="Horizontal">
                            <!-- номер билета -->
                            <StackPanel Orientation="Vertical" Margin="3">
                                <Label Content="Номер билета (необязательно)" FontSize="12" />
                                <TextBox x:Name="ReportCardNumberTextBox" Width="150" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus"/>
                            </StackPanel>

                            <!-- начальная дата -->
                            <StackPanel Orientation="Vertical" Margin="3">
                                <Label Content="Начальная дата" FontSize="12" />
                                <DatePicker x:Name="ReportStartDatePicker" Width="150" />
                            </StackPanel>

                            <!-- конечная дата -->
                            <StackPanel Orientation="Vertical" Margin="3">
                                <Label Content="Конечная дата" FontSize="12" />
                                <DatePicker x:Name="ReportEndDatePicker" Width="150" />
                            </StackPanel>

                            <!-- кнопка формирования отчета -->
                            <Button Content="Сформировать отчет" Width="150" Margin="3" Click="GenerateReportButton_Click" />
                        </StackPanel>
                    </Border>
                </StackPanel>


                <StackPanel Margin="10,50,10,10" Orientation="Vertical" Height="431">
                    <!-- список книг -->
                    <StackPanel Orientation="Vertical">
                        <Grid Margin="0,10,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- заголовок -->
                            <Label Content="Список книг"
                            FontWeight="Bold"
                            FontSize="16"
                            VerticalAlignment="Center"
                            Grid.Column="0"
                            Margin="0,0,10,0"/>

                            <!-- поле поиска -->
                            <TextBox x:Name="SearchTextBox"
                            Width="200"
                            Margin="111,10,0,0"
                            TextChanged="SearchTextBox_TextChanged"
                            VerticalAlignment="Top" HorizontalAlignment="Left" Grid.ColumnSpan="2"/>
                        </Grid>
                    </StackPanel>


                    <!-- формирование списка в форме -->
                    <DataGrid x:Name="BooksDataGrid"
                    AutoGenerateColumns="True"
                    Height="111"
                    SelectionChanged="BooksDataGrid_SelectionChanged"/>

                    <!-- список читателей -->
                    <StackPanel Orientation="Vertical" Margin="0,20,0,0">
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="22*"/> <!-- звездочки для соблюдения пропорциональности-->
                                <ColumnDefinition Width="257*"/>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- заголовок -->
                            <Label Content="Список читателей"
                            FontWeight="Bold"
                            FontSize="16"
                            VerticalAlignment="Center"
                            Grid.Column="0" Grid.ColumnSpan="2"/>

                            <!-- поле ввода -->
                            <TextBox x:Name="SearchReaderTextBox"
                            Width="200"
                            Margin="111,0,203,0"
                            TextChanged="SearchReaderTextBox_TextChanged" Height="21" VerticalAlignment="Center" Grid.Column="1"/>

                            <!-- поиск -->
                        </Grid>

                        <!-- формирование списка читателей -->
                        <DataGrid x:Name="ReadersDataGrid"
                        AutoGenerateColumns="True"
                        Height="105"
                        SelectionChanged="ReadersDataGrid_SelectionChanged"/>
                    </StackPanel>

                    <!-- список выданных книг -->
                    <Label Content="Список выданных книг" FontWeight="Bold" FontSize="16"/>
                    <DataGrid x:Name="AllDataBooks" AutoGenerateColumns="True" Height="82"/>
                </StackPanel>

            </StackPanel>
        </Grid>
    </Border>
</Window>